@model quanlycybergams.Models.May

@{
    ViewBag.Title = "Chi tiết Máy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">CHI TIẾT MÁY</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit", "Mays", new { id = Model.ID_May })" class="btn-sm btn-success"> <i class="fa fa-edit"> Sửa</i></a>
                        <a href="@Url.Action("Index", "Mays")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TenMay)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TinhTrangMay)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HoatDong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DonGia.ID_gia)
                            </th>
                            
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.TenMay)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.TinhTrangMay)
                            </td>

                            <td>
                                @{
                                    if (Model.HoatDong.HasValue)
                                    {
                                        if (Model.HoatDong.Value)
                                        {
                                            <span>Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span>Không Hoạt động</span>
                                        }
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.DonGia.ID_gia)
                            </td>

                        </tr>
                    </tbody>
                </table>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
