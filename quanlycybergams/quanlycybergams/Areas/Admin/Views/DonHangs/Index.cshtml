@model IEnumerable<quanlycybergams.Models.DonHang>

@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}
<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH MỤC ĐƠN HÀNG</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Create", "DonHangs")" class="btn-sm btn-success"><i class="fa fa-plus"> Tạo Đơn hàng</i></a>


                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <table class="table table-bordered  table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tongGia)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ghiChu)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ngayDatHang)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DichVu.TenDV)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TaiKhoan.TenKhachHang)
                                </th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.tongGia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ghiChu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ngayDatHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DichVu.TenDV)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TaiKhoan.TenKhachHang)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "DonHangs", new { id = item.MaDH })" class="btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                                        <a href="@Url.Action("Details", "DonHangs", new { id = item.MaDH })" class="btn-sm btn-info"><i class="fa fa-eye"></i></a>
                                        <a href="@Url.Action("Delete", "DonHangs", new { id = item.MaDH })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>


                    </table>

                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
