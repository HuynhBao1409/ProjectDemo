@model IEnumerable<quanlycybergams.Models.TaiKhoan>

@{
    ViewBag.Title = "Tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-wrapper bg-light-gray" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">

    <div class="body-wrapper">
        <!--  Header Start -->
        <!--  Header End -->
        <div class="container-fluid">
            <div class="my-3 text-center">
                <h1 class="fw-bolder">TÀI KHOẢN KHÁCH HÀNG</h1>
            </div>
            @using (Html.BeginForm("Index", "TaiKhoans", FormMethod.Get, new { @class = "input-group Th d-flex justify-content-center" }))
            {
                <div class="input-group mb-3 w-50 m-auto">
                    <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-secondary" type="button" id="button-addon2">Button</button>
                </div>
            }
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create", "TaiKhoans")" class="btn btn-success"><i class="fa fa-plus"> Tạo tài khoản</i></a>
            </div>
            <div class="table">
                <table class="table table-striped bg-light-gray rounded" style="box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                @Html.DisplayNameFor(model => model.ID_KhachHang)
                            </th>
                            <th>@Html.DisplayNameFor(model => model.TenKhachHang)</th>
                            <th>@Html.DisplayNameFor(model => model.ThoiGianGiaNhap)</th>
                            <th>@Html.DisplayNameFor(model => model.LoaiKhachHang)</th>
                            <th>@Html.DisplayNameFor(model => model.TenDN)</th>
                            <th>@Html.DisplayNameFor(model => model.GiaMay)</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ID_KhachHang)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenKhachHang)</td>
                                <td>@Html.DisplayFor(modelItem => item.ThoiGianGiaNhap)</td>
                                <td>@Html.DisplayFor(modelItem => item.LoaiKhachHang)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenDN)</td>
                                <td>@Html.DisplayFor(modelItem => item.GiaMay)</td>
                                <td class="border-bottom-0">
                                    <a href="@Url.Action("Edit", "TaiKhoans", new { id = item.ID_KhachHang })">
                                        <button type="button" class="btn btn-success">
                                            <i class="ti ti-edit"></i>
                                        </button>
                                    </a>

                                    <a href="@Url.Action("Details", "TaiKhoans", new { id = item.ID_KhachHang })">
                                        <button type="button" class="btn btn-info">
                                            <i class="ti ti-eye"></i>
                                        </button>
                                    </a>

                                    <a href="@Url.Action("Delete", "TaiKhoans", new { id = item.ID_KhachHang })">
                                        <button type="button" class="btn btn-danger">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>